<view class="container">
  <view class="item2-2-detail">
    <view class="item2-2">
      <view class="pcolor"></view>
      <view class="zongxiang">
        <view class='hengxiang'>
          <image src='{{inf.touxiang}}' class="touxiang"></image>
          <view class="zongxiang1">
            <view class="nicheng">{{inf.username}}</view>
            <view class="timetext">{{inf.time}}</view>
          </view>





        </view>
        <view class=" neirong ">{{inf.content}}</view>
        <view class="huanhang "></view>

      </view>



    </view>









    <view class='hengxiang2'>

      <view class="zfpl ">
        <image src="http://47.95.224.243/img/luntan-pinglun.png " class="zf-img "></image>
        <view class="pl-text">评论</view>
      </view>
      <view class="zfpl " bindtap='dianzan' data-id="{{inf.id}}" data-index="{{index}}">
