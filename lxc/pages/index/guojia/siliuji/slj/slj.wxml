<view class="container">
    <view class="remind-box" wx:if="{{remind}}">
        <image class="remind-img" src="http://47.95.224.243/img/index/loading.gif"></image>
    </view>
    <block wx:else>
      
        <image class="title" src="http://47.95.224.243/img/tb.png"></image>

        <view class="bd">
            <form>
                <view class="input-group {{ nameid_focus ? 'active' : ''   }}">
                    <input cursor-spacing="30" id="userid" placeholder="请输入姓名" bindinput="nameidInput" bindfocus="inputFocus" bindblur="inputBlur" />
                </view>
                <view class="input-group {{ passid_focus ? 'active' : '' }}">

                    <input  cursor-spacing="30" id="passid" placeholder="请输入准考证号" bindinput="passidInput" bindfocus="inputFocus" bindblur="inputBlur" />
                </view>
                <view class="confirm-btn" bindtap="bind">
                    <text>查询</text>
                </view>
                <view class="cj-help" bindtap="showHelp">
                        <text>遇到问题</text>
                        <image class="cj-help-img" src="http://47.95.224.243/img/help.png"></image>
                    </view>
            </form>
        </view>

    </block>

</view>